<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.myErp.dao.ProductMapper">
	<resultMap id="productResultMap" type="com.myErp.manager.bean.Product">
		<id column="productId" property="productId" jdbcType="INTEGER" />
		<result column="price" property="price" jdbcType="DECIMAL" />
		<result column="day" property="day" jdbcType="INTEGER" />
		<result column="productType" property="productType" jdbcType="INTEGER" />
		<result column="productDesc" property="productDesc" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="Base_Column">
		productId,price,day,productType,productDesc
	</sql>
	 
	<select id="selectProductlist" resultMap="productResultMap">
		select
		<include refid="Base_Column"></include>
		from product order by productId
	</select>
	<select id="selectProductById" resultType="com.myErp.manager.bean.Product"  parameterType="java.lang.Integer">
		select
		<include refid="Base_Column"></include>
		from product where  productId=#{productId}
	</select>
</mapper>