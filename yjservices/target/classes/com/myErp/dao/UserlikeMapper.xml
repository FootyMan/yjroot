<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.myErp.dao.UserlikeMapper">
	<resultMap id="likeMappingResultMap" type="com.myErp.manager.bean.Userlike">
		<id column="likeId" property="likeId" jdbcType="INTEGER" />
		<result column="userId" property="userId" jdbcType="INTEGER" />
		<result column="likeUserId" property="likeUserId" jdbcType="INTEGER" />
		<result column="likeDate" property="likeDate" jdbcType="TIMESTAMP" />
	</resultMap>

	<sql id="Base_Column_List">
		likeId,userId,likeUserId,likeDate
	</sql>

	<insert id="insertUserlike" parameterType="com.myErp.manager.bean.Userlike">
		insert into
		userlike
		(userId,likeUserId,likeDate)
		values
		(#{userId},#{likeUserId},now())

	</insert>

	<select id="selectUserLikeById" parameterType="com.myErp.manager.bean.Userlike"
		resultType="com.myErp.manager.bean.Userlike">
		select
		<include refid="Base_Column_List" />
		from userlike where userId=#{userId} and likeUserId=#{likeUserId}
	</select>

	<delete id="deleteUserlike" parameterType="com.myErp.manager.bean.Userlike">
		delete from userlike
		where userId=#{userId} and likeUserId=#{likeUserId}
	</delete>

</mapper>